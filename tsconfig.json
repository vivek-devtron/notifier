{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmit": false,
        "jsx": "preserve",
        "noImplicitAny": false,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es2015",
            "dom",
            "dom.iterable",
            "esnext"
        ]
    },
    "include": [
        "src/**/*",
        "node_modules/notifme-sdk.d.ts"
    ]
}